<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

  <changeSet id="1" author="me">
    <createTable
            schemaName="YILDIZDATABASE"
            tableName="ACCOUNTS">
      <column name="ID" type="int" autoIncrement="true">
      </column>
      <column name="LOGIN" type="VARCHAR(20)">
      </column>
      <column name="PASSWORD" type="VARCHAR(255)">
      </column>
      <column name="TYPE" type="int">
      </column>
      <column name="ONLINE" type="BOOLEAN">
      </column>
      <column name="MAP_ID" type="int">
      </column>
      <column name="ACTIVE" type="BOOLEAN">
      </column>
      <column name="EMAIL" type="VARCHAR(255)">
      </column>
      <column name="LAST_CONNECTION" type="TIMESTAMP">
      </column>
    </createTable>

    <createTable
            schemaName="YILDIZDATABASE"
            tableName="RESEARCHES">
      <column name="PLAYER_ID" type="int">
      </column>
      <!--WRONG TYPE TO MAKE INSERTION FAILS-->
      <column name="NAME" type="int">
      </column>
    </createTable>

    <createTable
            schemaName="YILDIZDATABASE"
            tableName="TEMP_ACCOUNTS">
      <column name="ID" type="int" autoIncrement="true">
      </column>
      <column name="LOGIN" type="VARCHAR(20)">
      </column>
      <column name="PASSWORD" type="VARCHAR(255)">
      </column>
      <column name="EMAIL" type="VARCHAR(255)">
      </column>
      <column name="CHECK_VALUE" type="VARCHAR(50)">
      </column>
      <column name="DATE" type="TIMESTAMP">
      </column>
      <column name="COMPLETE" type="BOOLEAN">
      </column>
    </createTable>
  </changeSet>

</databaseChangeLog>